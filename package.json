{
  "name": "project-version",
  "version": "1.0.0",
  "description": "Get the current version of your project",
  "main": "src/index.js",
  "bin": {
    "project-version": "./src/cli.js"
  },
  "dependencies": {
    "app-root-path": "^2.0.1"
  },
  "devDependencies": {
    "ava": "*",
    "codecov": "^2.2.0",
    "import-fresh": "^2.0.0",
    "nyc": "^11.0.3",
    "xo": "*"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "xo && ava",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov > coverage/coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonepri/project-version.git"
  },
  "author": {
    "name": "Simone Primarosa",
    "email": "simone.pri@hotmail.it"
  },
  "keywords": [
    "project",
    "latest",
    "version",
    "node",
    "npm",
    "pkg",
    "package",
    "package.json",
    "current",
    "module"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonepri/project-version/issues"
  },
  "homepage": "https://github.com/simonepri/project-version#readme",
  "xo": {
    "space": true,
    "rules": {
      "prefer-destructuring": [
        "error",
        {
          "array": false,
          "object": false
        },
        {
          "enforceForRenamedProperties": false
        }
      ]
    }
  }
}
